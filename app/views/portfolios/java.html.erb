<h1> Java Portfolio items </h1>

<%= link_to 'Create new item', new_portfolio_path %>
<% @java_portfolio_items.each do |portfolio_item| %>
    <hr>
    <p><%= link_to portfolio_item.title, portfolio_path(portfolio_item) %></p>
    <p><%= portfolio_item.sub_title %></p>
    <p><%= portfolio_item.body %></p>
    <p><%= image_tag portfolio_item.thamb_img if !portfolio_item.thamb_img.nil? %></p>
    <td><%= link_to 'Show', portfolio_item %></td>
    <td><%= link_to 'Edit', edit_portfolio_path(portfolio_item) %></td>
    <td><%= link_to 'Delete', portfolio_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>  
<% end %>