<%= form_for(@portfolio_item) do |f| %>
  
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :sub_title %>
    <%= f.text_field :sub_title %>
  </div>

  <div class="field">
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>
  
  <p>Technologies</p>
  <div class="field">
  <ul>
    <%= f.fields_for :technologies do |tech| %>
    <li>
      <%= tech.label :name %>
      <%= tech.text_field :name %>
    </li>
    <% end %>
  </ul>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>